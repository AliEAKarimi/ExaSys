<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.studentPanel.questionsType.DescriptiveQTypeController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <TextArea fx:id="questionTextTA" editable="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="162.0" prefWidth="654.0" wrapText="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" />
               </BorderPane.margin>
            </TextArea>
         </top>
         <center>
            <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="پاسخ خود را در کادر زیر وارد کنید. و در صورت لزوم میتوانید عکسی را با فرمت jpg. آپلود کنید.">
                     <VBox.margin>
                        <Insets bottom="8.0" top="8.0" />
                     </VBox.margin>
                  </Text>
                  <TextArea fx:id="answerTextTA" nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
            </VBox>
         </center>
         <left>
            <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="uploadImageBtn" onAction="#uploadImageBtnAction" prefHeight="79.0" prefWidth="95.0" text="آپلود عکس" />
                  <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
            </VBox>
         </left>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <bottom>
            <Separator style="-fx-background-color: #9C27B0;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Separator>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
